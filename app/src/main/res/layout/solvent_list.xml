<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/item_001"
            android:id="@+id/itemPhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/action_settings"
            android:scaleType="centerCrop" />

        <TextView
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="@string/hello_world"
            android:layout_below="@+id/itemPhoto"
            android:paddingBottom="2dp"
            android:paddingTop="8dp"
            android:maxLines="2"
            />

        <TextView
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/displayPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="RM 69.00"
            android:textColor="@color/mapboxOrange"
            android:layout_below="@+id/itemName"
            android:paddingBottom="2dp"
            android:paddingTop="3dp"
            android:maxLines="1" />

        <TextView
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/originalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="RM 118.00"
            android:layout_below="@+id/displayPrice"
            android:paddingBottom="2dp"
            android:paddingTop="3dp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/discountPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/originalPrice"
            android:layout_alignBottom="@+id/originalPrice"
            android:layout_toEndOf="@+id/originalPrice"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:paddingTop="3dp"
            android:text="- 41%"
            android:textSize="12sp" />

        <TextView
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/itemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Selangor"
            android:layout_below="@+id/originalPrice"
            android:paddingBottom="5dp"
            android:paddingTop="3dp"
            android:maxLines="1" />

    </RelativeLayout>

</android.support.v7.widget.CardView>